@model ClassesSchedule.ViewModel.MarksVM
@{
    ViewBag.Title = "Marks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:5%; margin-bottom:10%;" class="container">
    <h2 style="text-align:center; margin-bottom:2%;">List of Marks</h2>
    <div style="margin-bottom:15%;">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Course</th>
                    <th>Student</th>
                    <th>Mark</th>
                    <th>Date</th>
                    <th>Teacher</th>
                    <th>Degree</th>
                </tr>
            </thead>
            <tbody>
                @{int i = 1;}
                @foreach (var item in Model.MarksList)
            {
                    <tr>
                        <td>@i @{i++;}</td>
                        <td>@item.Course </td>
                        <td>@item.Student</td>
                        <td>@item.Value</td>
                        <td>@item.Date.Value.ToShortDateString()</td>
                        <td>@item.Teacher</td>
                        <td>@item.Degree</td>
                    </tr>
                            }
            </tbody>
        </table>

