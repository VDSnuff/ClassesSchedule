<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Classes Schedule</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body{
          background-color:#F9F9F9;
          overflow-y: hidden; 
          overflow-x: hidden;

        }
        h2{
            color:#808080;
        }
     
    </style>

</head>
<body>
    <div class="container-fluid body-content">
         @RenderBody()
        
        <footer style="text-align:center; color:#808080; position:fixed; bottom: 10px; width:100%;">
            <hr />
            @*<img src="@Url.Content("~/Content/school_pattern_03.jpg")" alt="IMAGES" style="opacity:0.3; z-index: -999; position:absolute;" />*@   
            <p>@DateTime.Now.Year - Class Schedule Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
