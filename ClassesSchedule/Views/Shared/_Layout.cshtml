<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Classes Schedule</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Classes Schedule", "Main", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Schedule", "Schedule", "Home")</li>
                    <li>@Html.ActionLink("Courses", "Courses", "Home")</li>
                    <li>@Html.ActionLink("Teachers", "Teachers", "Home")</li>
                    <li>@Html.ActionLink("Students", "Students", "Home")</li>
                    <li>@Html.ActionLink("Marks", "Marks", "Home")</li>
                </ul>
            </div>
            <div id="UserRole">
                @* CURRENT USER *@
                @if (@Session["ROLE"] != null)
                {
                if (@Session["ROLE"].ToString() == "2")
                {
                    <p> Hi, @Session["FNAME"] (Role: Admin.)</p>
                }
                if (Session["ROLE"].ToString() == "3")
                {
                    <p>Hi, @Session["FNAME"] (Role: Teacher.)</p>
                }
                if (Session["ROLE"].ToString() == "4")
                {
                    <p>Hi, @Session["FNAME"] (Role: Student.)</p>
                    }
                }
                @* END *@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now.Year - Class Schedule Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
